<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پنل مدیریت فروشگاه</title>
    <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/stylesheet/admin-panel.css">
</head>

<body>
    <div class="admin-container">
        <!-- Header -->
        <div class="admin-header">
            <h1 class="admin-title">پنل مدیریت فروشگاه</h1>
            <div class="admin-user-info">
                <!-- User info will be populated by JavaScript -->
            </div>
            <a href="/shop" class="back-to-shop">
                <i class="bx bx-arrow-back"></i>
                بازگشت به فروشگاه
            </a>
        </div>

        <!-- Tabs -->
        <div class="admin-tabs">
            <button class="tab-btn active" onclick="switchTab('dashboard')">
                <i class="bx bx-home"></i>
                داشبورد
            </button>
            <button class="tab-btn" onclick="switchTab('products')">
                <i class="bx bx-package"></i>
                مدیریت کالاها
            </button>
            <button class="tab-btn" onclick="switchTab('categories')">
                <i class="bx bx-category"></i>
                دسته‌بندی‌ها
            </button>
            <button class="tab-btn" onclick="switchTab('users')">
                <i class="bx bx-user"></i>
                کاربران
            </button>
            <button class="tab-btn" onclick="switchTab('orders')">
                <i class="bx bx-receipt"></i>
                سفارشات
            </button>
        </div>

        <!-- Tab Content -->
        <div class="tab-content">
            <!-- Dashboard Tab -->
            <div id="dashboard-panel" class="tab-panel active">
                <h2>
                    <i class="bx bx-home"></i>
                    داشبورد
                </h2>
                <div id="dashboard-content">
                    <div class="loading">در حال بارگذاری...</div>
                </div>
            </div>

            <!-- Products Management Tab -->
            <div id="products-panel" class="tab-panel">
                <h2>
                    <i class="bx bx-package"></i>
                    مدیریت کالاها
                </h2>
                <div id="products-table-container">
                    <div class="loading">در حال بارگذاری محصولات...</div>
                </div>
            </div>

            <!-- Categories Management Tab -->
            <div id="categories-panel" class="tab-panel">
                <h2>
                    <i class="bx bx-category"></i>
                    مدیریت دسته‌بندی‌ها
                </h2>
                <div id="categories-table-container">
                    <div class="loading">در حال بارگذاری دسته‌بندی‌ها...</div>
                </div>
            </div>

            <!-- Users Management Tab -->
            <div id="users-panel" class="tab-panel">
                <h2>
                    <i class="bx bx-user"></i>
                    مدیریت کاربران
                </h2>
                <div id="users-table-container">
                    <div class="loading">در حال بارگذاری کاربران...</div>
                </div>
            </div>

            <!-- Orders Management Tab -->
            <div id="orders-panel" class="tab-panel">
                <h2>
                    <i class="bx bx-receipt"></i>
                    مدیریت سفارشها
                </h2>
                <div class="filter-section">
                    <div class="filter-btns">
                        <button class="filter-btn active" onclick="filterOrders('all')">
                            همه سفارشها
                        </button>
                        <button class="filter-btn" onclick="filterOrders('finished')">
                            تحویل شده
                        </button>
                        <button class="filter-btn" onclick="filterOrders('pending')">
                            در انتظار پرداخت
                        </button>
                        <button class="filter-btn" onclick="filterOrders('open')">
                            فعال
                        </button>
                    </div>
                </div>
                <div id="orders-table-container">
                    <div class="loading">در حال بارگذاری سفارشات...</div>
                </div>
            </div>
        </div>
    </div>

    <!-- ==================== MODALS ==================== -->

    <!-- Add Product Modal -->
    <div id="addProductModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">
                    <i class="bx bx-plus"></i>
                    افزودن محصول جدید
                </h2>
                <span class="close" onclick="closeModal('addProductModal')">&times;</span>
            </div>
            <form id="addProductForm" onsubmit="event.preventDefault(); addProduct();">
                <div class="form-group">
                    <label class="form-label">
                        <i class="bx bx-package"></i>
                        نام محصول:*
                    </label>
                    <input type="text" id="addProductName" class="form-input" required
                        placeholder="نام محصول را وارد کنید">
                </div>
                <div class="form-group">
                    <label class="form-label">
                        <i class="bx bx-tag"></i>
                        برند:*
                    </label>
                    <input type="text" id="addProductBrand" class="form-input" required
                        placeholder="نام برند را وارد کنید">
                </div>
                <div class="form-group">
                    <label class="form-label">
                        <i class="bx bx-category"></i>
                        دسته‌بندی:*
                    </label>
                    <select id="addProductCategory" class="form-select" required>
                        <option value="">انتخاب دسته‌بندی</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">
                        <i class="bx bx-category-alt"></i>
                        زیردسته:*
                    </label>
                    <select id="addProductSubCategory" class="form-select" required>
                        <option value="">ابتدا دسته‌بندی را انتخاب کنید</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">
                        <i class="bx bx-dollar"></i>
                        قیمت (تومان):*
                    </label>
                    <input type="number" id="addProductPrice" class="form-input" required min="0"
                        placeholder="قیمت محصول">
                </div>
                <div class="form-group">
                    <label class="form-label">
                        <i class="bx bx-box"></i>
                        موجودی:*
                    </label>
                    <input type="number" id="addProductQuantity" class="form-input" required min="0"
                        placeholder="تعداد موجودی">
                </div>
                <div class="form-group">
                    <label class="form-label">
                        <i class="bx bx-image"></i>
                        تصویر محصول:
                    </label>
                    <input type="file" id="addProductThumbnail" class="form-input" accept="image/*">
                    <img id="addThumbnailPreview"
                        style="display: none; margin-top: 10px; max-width: 200px; max-height: 150px; border-radius: 8px;">
                </div>
                <div class="form-group">
                    <label class="form-label">
                        <i class="bx bx-text"></i>
                        توضیحات:
                    </label>
                    <textarea id="addProductDescription" class="form-input" rows="3"
                        placeholder="توضیحات اختیاری درباره محصول..."></textarea>
                </div>
                <div class="form-actions">
                    <button type="button" class="btn-secondary" onclick="closeModal('addProductModal')">
                        <i class="bx bx-x"></i>
                        انصراف
                    </button>
                    <button type="submit" class="btn-primary">
                        <i class="bx bx-check"></i>
                        افزودن محصول
                    </button>
                </div>
            </form>
        </div>
    </div>

