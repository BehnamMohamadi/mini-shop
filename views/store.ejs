<body>
  <header>
    <h1 style="text-align: center; padding: 20px; background: #007bff; color: white; margin: 0;">فروشگاه فلان</h1>
  </header>

  <div class="container">
    <aside class="sidebar">
      <h3 style="text-align: center; margin-bottom: 20px;">دسته‌بندی‌ها</h3>
      <% groupedProducts.forEach(category=> { %>
        <div class="category">
          <h4>
            <%= category.name %>
          </h4>
          <ul>
            <% category.subCategories.forEach(sub=> { %>
              <li>
                <%= sub.name %>
              </li>
              <% }) %>
          </ul>
        </div>
        <% }) %>
    </aside>



    <main class="product-list">
      <% Object.keys(groupedProducts).forEach(categoryKey=> {
        const categoryGroup = groupedProducts[categoryKey];
        Object.keys(categoryGroup).forEach(subKey => {
        const products = categoryGroup[subKey];
        const subName = subKey.name || subKey;
        %>
        <section class="product-group">
          <h2>کالاهای گروه <%= subName %>
          </h2>
          <div class="products">
            <% products.forEach(product=> { %>
              <div class="product-card">
                <img
                  src="<%= product.imageUrl || ' /images/profiles/models-images/product-images/default-thumbnail.jpeg' %>"
                  alt="<%= product.name %>">

                <h4>
                  <%= product.name %>
                </h4>
                <p>
                  <%= product.price %> تومان
                </p>
              </div>
              <% }) %>
          </div>
        </section>
        <% }) }) %>
    </main>
  </div>
