<!-- shop.ejs -->
<!DOCTYPE html>
<html>

<head>
  <title>shop</title>
  <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/stylesheet/shop.css" />
  <link rel="stylesheet" href="/stylesheet/modal.css" />
  <link rel="stylesheet" href="/stylesheet/basket.css" />
  <meta charset="UTF-8" />
</head>

<body>


  <header>
    <div class="right-side-header">
      <h1>فروشگاه فلان</h1>
    </div>
    <div class="left-side-header">
      <nav>
        <% if (user && user.role==='admin' ) { %>
          <a href="/admin">مدیریت</a>
          <% } %>

            <div id="cart-modal" class="cart-modal hidden">
              <div class="cart-header">
                <h3>سبد خرید</h3>
                <span id="close-cart">✖</span>
              </div>
              <div id="cart-items"></div>
              <div id="cart-total">جمع: ۰ تومان</div>
              <a href="http://127.0.0.1:8000/api/basket " class="checkout-btn">نهایی کردن خرید</a>
            </div>

            <div class="cart-wrapper">
              <div class="cart-icon" id="cart-icon">🛒</div>
            </div>
      </nav>
    </div>
  </header>


  <main class="container">
    <div id="product-container"></div>
  </main>

  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo_content">
      <div class="logo">
        <div class="logo_icon"></div>
        <div class="logo_name">shop</div>
      </div>
      <i class="bx bx-menu" id="btn"></i>
    </div>

    <ul class="nav_list">
      <li>
        <i class="bx bx-search"></i>
        <input placeholder="Search..." />
        <span class="tooltip">Search</span>
      </li>

      <li>
        <a href="#" class="user-profile-link" onclick="renderUpdateUser('<%= user._id %>')">
          <i class=" bx bx-user" id="user-icon"></i>
          <span class="links_name">User</span>
        </a>
        <span class="tooltip">User</span>
      </li>

      <li>
        <a href="#">
          <i class="bx bx-grid-alt"></i>
          <span class="links_name">division</span>
        </a>
        <span class="tooltip">division</span>
      </li>

      <li>
        <a href="#">
          <i class="bx bx-cart-alt"></i>
          <span class="links_name">Order</span>
        </a>
        <span class="tooltip">Order</span>
      </li>

      <li>
        <a href="#">
          <i class="bx bx-heart" </i>
            <span class="links_name">Saved</span>
        </a>
        <span class="tooltip">Saved</span>
      </li>

      <li>
        <a href="#">
          <i class="bx bx-pie-chart-alt-2"></i>
          <span class="links_name">orders</span>
        </a>
        <span class="tooltip">orders</span>
      </li>

      <li>
        <a href="#">
          <i class="bx bx-cog"></i>
          <span class="links_name">Settings</span>
        </a>
        <span class="tooltip">Settings</span>
      </li>
    </ul>

    <div class="log_out-bx">
      <div class="log_out">
        <ul>
          <li>
            <a href="#">
              <i class="bx bx-log-out" id="log_out-btn"></i>
              <span class="links_name">Logout</span>
            </a>
            <span class="tooltip">Logout</span>
          </li>
        </ul>
      </div>
    </div>
  </div>


  <script type="module" src="/javascript/shop.js"></script>

</body>

</html>