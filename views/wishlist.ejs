<!-- views/wishlist.ejs -->
<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>علاقه‌مندی‌ها - فروشگاه فلان</title>
  <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/stylesheet/wishlist.css" />
</head>

<body>
  <!-- Header -->
  <header>
    <div class="right-side-header">
      <h1>فروشگاه فلان</h1>
    </div>
    <div class="left-side-header">
      <nav>
        <a href="/shop">فروشگاه</a>
        <a href="/basket">سبد خرید</a>
        <% if (user && user.role==='admin' ) { %>
          <a href="/admin-panel">مدیریت</a>
          <% } %>
      </nav>

      <div class="cart-wrapper">
        <div class="cart-icon" id="cart-icon">🛒</div>
      </div>
    </div>
  </header>

  <!-- Main Container -->
  <div class="wishlist-container">
    <div class="page-header">
      <button onclick="goBackToShop()" class="back-btn">
        <i class='bx bx-arrow-back'></i> بازگشت به فروشگاه
      </button>
      <h1>علاقه‌مندی‌های من</h1>
      <p>محصولاتی که برای خرید آینده ذخیره کرده‌اید</p>
    </div>

    <div class="wishlist-actions">
      <button onclick="clearAllWishlist()" class="clear-all-btn" id="clear-all-btn">
        <i class='bx bx-trash'></i> پاک کردن همه
      </button>
    </div>

    <div id="wishlist-content" class="loading">
      <div class="spinner"></div>
      <p>در حال بارگذاری علاقه‌مندی‌ها...</p>
    </div>
  </div>

  <!-- Cart Modal -->
  <div id="cart-modal" class="cart-modal hidden">
    <div class="cart-header">
      <h3>سبد خرید</h3>
      <span id="close-cart">✖</span>
    </div>
    <div id="cart-items"></div>
    <div id="cart-total"></div>
  </div>

  <script type="module" src="/javascript/wishlist.js"></script>
</body>

</html>